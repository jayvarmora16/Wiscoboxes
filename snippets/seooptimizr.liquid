		{% endif %}

		{% if product.metafields.global.optimi_social_meta_title != "null" %}
            <meta name="twitter:title" content="{{ product.metafields.global.optimi_social_meta_title | escape }}">
            <meta property="og:title" content="{{ product.metafields.global.optimi_social_meta_title | escape }}" />
		{% endif %}
