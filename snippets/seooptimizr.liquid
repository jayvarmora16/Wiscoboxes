		{% endif %}

		<!-- advanced meta fields check -->
        {% if product.metafields.global.optimi_global_noindex != null %}
            <meta name="robots" content="noindex">
        {% endif %}
        {% if product.metafields.global.optimi_global_nofollow != null %}
            <meta name="robots" content="nofollow">
        {% endif %}
        {% if product.metafields.global.optimi_global_noimageindex != null %}
            <meta name="robots" content="noimageindex">
        {% endif %}
        {% if product.metafields.global.optimi_global_noarchive != null %}
            <meta name="robots" content="noarchive">
        {% endif %}
        {% if product.metafields.global.optimi_global_nosnippet != null %}
            <meta name="robots" content="nosnippet">
        {% endif %}
        {% if product.metafields.global.optimi_global_notranslate != null %}
